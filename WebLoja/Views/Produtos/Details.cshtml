@model WebLoja.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">

        <dd class="col-sm-12">
            <img src="@Model.Foto" class="img-fluid"/>
        </dd>



        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt class="col-sm-2">Quantidade</dt>
        <dd>
            <input type="number" id="Qt" name="Qt" value="1" min="1" />
        </dd>
    </dl>
</div>
<div>
    <input type="hidden" id="IdProduto" name="IdProduto" value="@Model.Id"/>
    <input type="submit" asp-controller="Carrinho" asp-action="AddItem" formmethod="get" />

    <a asp-action="Index">Voltar a lista de Produtos</a>
</div>

</form>
